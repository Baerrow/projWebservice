{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Audio</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ entity.number }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Issaga</th>
                <td>{{ entity.isSaga }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ entity.genre }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ entity.link }}</td>
            </tr>
            <tr>
                <th>Uploadedby</th>
                <td>{{ entity.uploadedBy }}</td>
            </tr>
            <tr>
                <th>Author</th>
                {% for author in entity.authors %}
                    <td>{{ author.name }}{% if not loop.last %}, {% endif %}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('audios') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('audios_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
